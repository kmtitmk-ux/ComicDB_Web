{
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.exclude": {
    "package/amplify/.config": true,
    "package/amplify/**/*-parameters.json": true,
    "package/amplify/**/amplify.state": true,
    "package/amplify/**/transform.conf.json": true,
    "package/amplify/#current-cloud-backend": true,
    "package/amplify/backend/amplify-meta.json": true,
    "package/amplify/backend/awscloudformation": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  }
}
